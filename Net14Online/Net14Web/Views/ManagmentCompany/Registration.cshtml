@using Net14Web.DbStuff.ManagmentCompany.Models.Enums
@using Net14Web.Models.ManagmentCompany
@model RegistrationViewModel

@{
    Layout = "_LayoutManagmentCompany";
}

@section Style
{
    <link href="~/css/ManagmentCompany/ManagmentCompany.css" rel="stylesheet" />
    <link href="~/css/ManagmentCompany/Styles.css" rel="stylesheet" />
}

<div class="regContainer">
    <div class="dropdown">
        <button class="dropbtn">
            <img class="menu" src="icon.jpg" alt="Меню" id="menuIcon">
        </button>
        <div class="dropdown-content">
            @if ((!User?.Identity?.IsAuthenticated) ?? true)
            {
                foreach (var myPage in @Model.GuestPages)
                {
                    <a href="/ManagmentCompany/@myPage.Key">@myPage.Value</a>
                }
                <a class="login" href="/auth/McLogin">Войти</a>
                <a class="reg" href="/ManagmentCompany/Registration">Зарегистрироваться</a>
            }
            else if ((User?.Identity?.IsAuthenticated) ?? true && User?.Claims
            .FirstOrDefault(x => x.Type == "permissionId")?.Value == ((int)MemberPermissionEnum.User).ToString())
            {
                foreach (var myPage in @Model.UserPages)
                {
                    <a href="/ManagmentCompany/@myPage.Key">@myPage.Value</a>
                }
                <a class="login" href="/auth/McLogout">Выйти</a>
            }
            else
            {
                foreach (var myPage in @Model.AdminPages)
                {
                    <a href="/ManagmentCompany/@myPage.Key">@myPage.Value</a>
                }
                <a class="login" href="/auth/McLogout">Выйти</a>
            }
        </div>
    </div>
    <h2>Регистрация</h2>
    <form method="post">
        <label for="name">Ваша почта:</label>
        @Html.TextBoxFor(x => x.Email)
        @Html.ValidationMessageFor(x =>x.Email)

        <label for="nickName">Ваш ник на сайте (будет виден другим пользвоателям):</label>
        @Html.TextBoxFor(x => x.NickName)
        @Html.ValidationMessageFor(x => x.NickName)

        <label for="password">Ваш пароль:</label>
        @Html.PasswordFor(x => x.Password)
        @Html.ValidationMessageFor(x => x.Password)

        <button class="button" type="submit">Зарегистрироваться</button>
    </form>
</div>


