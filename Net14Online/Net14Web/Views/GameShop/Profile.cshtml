@model Net14Web.Models.GameShop.GameDto

@{
    Layout = "_LayoutGameShop";
}

@section Style
{
    <link href="~/css/games.css" rel="stylesheet" />
}

<div class="game">
    <form action="/gameShop/delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div>
            <input type="submit" value="X" />
        </div>
    </form>

    <div>
        <img src="@Model.LogoUrl" />
    </div>

    <div class="game-footer">
        <div class="name-block">
            <div>
                @Model.Name
            </div>
        </div>
        <div class="raiting-block">
            <div>
                @Model.Raiting
            </div>
        </div>
        <div class="genre-block">
            <div>
                @Model.Genre
            </div>
        </div>
    </div>
</div>

<div class="comments-block">
    <form action="/gameShop/addComment" method="post">
        <input type="hidden" name="gameId" value="@Model.Id" />
        <div>
            <input type="text" name="comment" />
        </div>

        <div>
            <input type="submit" value="Add Comment" />
        </div>
    </form>

    <div class="existed-comments">
        @if (Model.Comments != null)
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="comment">
                    @comment.Content;
                </div>
            }
        }
    </div>

</div>
