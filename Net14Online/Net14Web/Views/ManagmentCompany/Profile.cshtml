@using Net14Web.DbStuff.ManagmentCompany.Models.Enums
@using Net14Web.Models.ManagmentCompany
@model ProfileViewModel

@{
    Layout = "_LayoutManagmentCompany";
}

@section Style
{
    <link href="~/css/ManagmentCompany/ManagmentCompany.css" rel="stylesheet" />
    <link href="~/css/ManagmentCompany/Styles.css" rel="stylesheet" />
}

<main>
    <div>
        <div class="dropdown">
            <button class="dropbtn">
                <img class="menu" src="icon.jpg" alt="Меню" id="menuIcon">
            </button>
            <div class="dropdown-content">
                @if ((!User?.Identity?.IsAuthenticated) ?? true)
                {
                    foreach (var myPage in @Model.GuestPages)
                    {
                        <a href="/ManagmentCompany/@myPage.Key">@myPage.Value</a>
                    }
                    <a class="login" href="/ManagmentCompany/Login">Войти</a>
                    <a class="reg" href="/ManagmentCompany/Registration">Зарегистрироваться</a>
                }
                else if ((User?.Identity?.IsAuthenticated) ?? true && User?.Claims
                .FirstOrDefault(x => x.Type == "permissionId")?.Value == ((int)MemberPermissionEnum.User).ToString())
                {
                    foreach (var myPage in @Model.UserPages)
                    {
                        <a href="/ManagmentCompany/@myPage.Key">@myPage.Value</a>
                    }
                    <a class="login" href="/auth/McLogout">Выйти</a>
                }
                else
                {
                    foreach (var myPage in @Model.AdminPages)
                    {
                        <a href="/ManagmentCompany/@myPage.Key">@myPage.Value</a>
                    }
                    <a class="login" href="/auth/McLogout">Выйти</a>
                }
            </div>
        </div>
        <h2>Личный кабинет</h2>
        <form method="post">
            <img class="avatar" src="img.svg" width="80" height="80" alt="Аватар">
            @Html.
            <input type="hidden" name="id" value="@Model.Id" />
            <label for="name"> Имя</label>
            @Html.TextBoxFor(x => x.FirstName)
            @Html.ValidationMessageFor(x => x.FirstName)
            <label for="name"> Фамилия</label>
            @Html.TextBoxFor(x => x.LastName)
            @Html.ValidationMessageFor(x => x.LastName)
            <label for="name"> Телефон</label>
            @Html.TextBoxFor(x => x.PhoneNumber)
            @Html.ValidationMessageFor(x => x.PhoneNumber)
            <label for="name"> Ваш ник</label>
            @Html.TextBoxFor(x => x.NickName)
            @Html.ValidationMessageFor(x => x.NickName)
            <label for="name"> Электронная почта</label>
            @Html.TextBoxFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
            <label for="name"> Пароль</label>
            @Html.TextBoxFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </form>
    </div>
</main>
