@using Net14Web.Models.GameShop
@model List<GameViewModel>

@{
    Layout = "_LayoutGameShop";
}

@section Style
{
    <link href="~/css/games.css" rel="stylesheet" />
}

<div>
    <a href="/GameShop/AddGame">AddGame</a>
</div>

<div class="games">
    @foreach (var game in Model)
    {
        <div class="game">
            <div>
                <img src="@game.PosterUrl" />

            </div>

            <div class="game-footer">
                <div>
                    @game.Name
                </div>
                <div>
                    @game.Rating
                </div>
                <div>
                    @game.Genre
                </div>
            </div>
            <div class="remove-block">
                <a href="/gameshop/deletegame?name=@game.Name" class="remove-link">Remove</a>
            </div>
            <div class="new-info-block">
                <form action="/gameshop/updateGame" method="post">
                    <input type="hidden" name="name" value="@game.Name" />
                    <div>
                        <div>
                            <input type="text" name="posterUrl" />
                        </div>
                    </div>
                    <div>
                        <input type="submit" value="Update" />
                    </div>
                </form>
            </div>
            <div class="View-action">
                <form action="/gameshop/ViewGame" method="post">
                    <input type="hidden" name="name" value="@game.Name" />
                    <div>
                        <input type="submit" value="ViewGame" />
                    </div>
                </form>
            </div>
        </div>
    }
</div>
